{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./types/*"],
      "@/vlayer/*": ["./vlayer/*"]
    }
  },
  "include": [
    "src/**/*",
    "script/**/*",
    "test-ts/**/*",
    "types/**/*",
    "vlayer/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "cache",
    "broadcast"
  ]
}
