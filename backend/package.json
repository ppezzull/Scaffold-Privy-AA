{
  "name": "zkmed-backend",
  "version": "1.0.0",
  "description": "zkMed backend smart contracts and testing infrastructure",
  "type": "module",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "test:ts": "bun test test-ts/",
    "deploy:local": "forge script script/DeployLocal.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:testnet": "forge script script/DeployProduction.s.sol --rpc-url $RPC_URL --broadcast --verify",
    "generate-types": "typechain --target ethers-v6 --out-dir ./types './out/**/*.json'",
    "vlayer:up": "cd vlayer && docker compose --file docker-compose.devnet.yaml up -d",
    "vlayer:down": "cd vlayer && docker compose --file docker-compose.devnet.yaml down",
    "vlayer:health": "cd vlayer && bun run ../scripts/vlayer-quick-diag.sh",
    "dev": "npm run vlayer:up && npm run deploy:local",
    "export-abis": "node scripts/export-abis.js"
  },
  "dependencies": {
    "@vlayer/sdk": "1.0.2",
    "ethers": "^6.13.0",
    "viem": "2.27.0"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/bun": "^1.1.6",
    "@types/node": "^22.15.29",
    "typechain": "^8.3.2",
    "typescript": "^5.5.4"
  },
  "overrides": {
    "viem": "2.27.0"
  }
}
