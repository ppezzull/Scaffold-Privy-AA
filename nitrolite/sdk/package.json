{
    "name": "@erc7824/nitrolite",
    "version": "0.2.6",
    "description": "The Nitrolite SDK empowers developers to build high-performance, scalable web3 applications using state channels. It's designed to provide near-instant transactions and significantly improved user experiences by minimizing direct blockchain interactions.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "build:prod": "tsc -p tsconfig.prod.json",
        "watch": "tsc --watch",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "prepublishOnly": "npm run clean && npm run build:prod"
    },
    "keywords": [
        "erc7824",
        "statechannels",
        "chain abstraction",
        "chain agnostic",
        "state channels",
        "ethereum",
        "scaling",
        "layer 2",
        "layer 3",
        "nitro",
        "nitrolite",
        "high-speed"
    ],
    "author": "Nitro Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/erc7824/nitrolite.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "abitype": "^0.10.3",
        "viem": "^2.5.0"
    },
    "devDependencies": {
        "@types/jest": "29.5.14",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.0"
    }
}
